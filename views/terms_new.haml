%h1 Enter a New Term
%form(action="/term" method="post")
  %ul
    %li
      %label name
      %textarea(rows="1" cols="50")
    %li
      %label definition
      %textarea(rows="3" cols="50")
    %li
      %label author
      %textarea(rows="1" cols="50")
    %li
      %label web_link
      %textarea(rows="1" cols="50")
    %li
      %label category_id
      %textarea(rows="1" cols="50")
  %input(type="submit")
